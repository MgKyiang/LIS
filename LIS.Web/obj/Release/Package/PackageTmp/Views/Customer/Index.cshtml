@model IEnumerable<LIS.Core.DataModel.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@*Normal*@
<link href="~/wwroot/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/wwroot/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" />
@*Jquery ui*@
@*<link href="~/wwroot/plugins/datatables/dataTables.jqueryui.css" rel="stylesheet" />*@

<script src="~/wwroot/plugins/jQuery/jquery-2.2.3.min.js"></script>
@*Normal*@
<script src="~/wwroot/plugins/datatables/jquery.dataTables.js"></script>
@*Jquery ui*@
@*<script src="~/wwroot/plugins/datatables/dataTables.jqueryui.min.js"></script>*@
<script>
    jQuery(function ($) {
        $("#tblCustomer").DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>
<table class="table table-bordered table-hover dataTable" role="grid" id="tblCustomer">
    <thead>
        <tr>
            <th>Action</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    <a href="@Url.Action("Edit", "Customer", new {   id=item.CustomerID })" class="tooltip-success wow slideInDown" data-wow-duration="2s" data-rel="tooltip" title="Edit">
                        <span class="green">
                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                        </span>
                    </a> |
                    <a href="@Url.Action("Delete", "Customer", new {  id=item.CustomerID })" class="tooltip-error wow slideInDown" data-wow-duration="2s" data-rel="tooltip" title="Delete">
                        <span class="red">
                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                        </span>
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                
            </tr>
            }
    </tbody>
</table>
